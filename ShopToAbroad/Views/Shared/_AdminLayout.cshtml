
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title - Shop-To-Abroad</title>

    @Styles.Render("~/Content/Content/css")
    <style>
        .page-header {
            padding-bottom: 5px;
            margin: 10px;
            border-bottom: 1px solid #eee;
        }


        .navbar-inverse .navbar-nav > .active > a {
            color: #fff;
            background-color: #337ab7;
        }

        .navbar-brand {
            padding: 0;
        }
    </style>

</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" rel="home" href="@Url.Action("Index","Dashboard")" title="Shop-To-Abroad">
               
                    <img style="max-width:50px; margin-right: 10px; display:inline-block"
                         src="~/Content/img/icons8-shopping-cart-100.png">SHOP TO ABROAD
                </a>

            </div>
            <!-- Top Menu Items -->
            <ul class="nav navbar-right top-nav">


                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i>@Session["username"]<b class="caret"></b></a>
                    <ul class="dropdown-menu">

                        <li>
                            <a href="@Url.Action("Logout","admin_Login")"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li class="@(ViewBag.Title == "Order" ? "active" : "")">
                        <a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-fw fa-shopping-cart"></i> Dashboard</a>
                    <li class="@(ViewBag.Title == "Order" ? "active" : "")">
                        <a href="@Url.Action("Index", "Order")"><i class="fa fa-fw fa-shopping-cart"></i> Order List</a>
                    </li>
                    <li class="@(ViewBag.Title == "Product" ? "active" : "")">
                        <a href="@Url.Action("Index", "AddProduct")"><i class="fa fa-fw fa-table"></i> All Product</a>
                    </li>
                    <li class="@(ViewBag.Title == "Supplier" ? "active" : "")">
                        <a href="@Url.Action("Index", "Supplier")"><i class="fa fa-fw fa-truck"></i> Supplier List</a>
                    </li>
                    <li class="@(ViewBag.Title == "Customer" ? "active" : "")">
                        <a href="@Url.Action("Index", "Customer")"><i class="fa fa-fw fa-male"></i> Customer List</a>
                    </li>

                


                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>
        <div id="page-wrapper">
            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            @ViewBag.Title
                            <small>@ViewBag.SubTitle</small>
                        </h1>

                        @RenderBody()
                    </div>
                </div>
                <!-- /.row -->
                <hr />
                <footer style="font-weight:bold; color:coral">
                    <p>&copy; @DateTime.Now.Year - Design &Aacute; Developed By (SHOP TO ABROAD) team</p>
                </footer>
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
    <!-- jQuery and Bootstrap Core JavaScript -->
    @Scripts.Render("~/Content/Content/js")
    @RenderSection("scripts", required: false)

</body>
</html>
