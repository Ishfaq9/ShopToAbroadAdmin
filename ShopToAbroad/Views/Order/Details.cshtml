@using ShopToAbroad.Models;
@model Tuple<Order, IEnumerable<OrderDetail>>

@{
    ViewBag.Title = "Order Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .heading {
        color: green;
        font-weight: bold;
    }
    .data {
        font-weight: bold;
    }
    .infodata{
        font-weight:bold;
    }

    
</style>

<div class="row">
    <div class="col-md-6">
        <dl class="dl-horizontal " >
            <dt style="color:royalblue; font-weight:bold">
                @Html.DisplayName("Order ID : ")
            </dt>
            <dd class="infodata">
                @Html.DisplayFor(model => model.Item1.OrderID)
            </dd>
            <dt style="color:royalblue; font-weight:bold">
                @Html.DisplayName("Customer Name : ")
            </dt>
            <dd class="infodata">
                @Html.DisplayFor(model => model.Item1.Customer.First_Name)
            </dd>
            <dt style="color:royalblue; font-weight:bold">
                @Html.DisplayName("Customer Address : ")
            </dt>
            <dd class="infodata">
                @Html.DisplayFor(model => model.Item1.Customer.Address1)
            </dd>
            <dt style="color:royalblue; font-weight:bold">
                @Html.DisplayName("Contact No : ")
            </dt>
            <dd class="infodata">
                @Html.DisplayFor(model => model.Item1.Customer.Mobile1)
            </dd>

        </dl>
    </div>
    <div class="col-md-6">
        <dl class="dl-horizontal ">
            <dt style="color:royalblue; font-weight:bold">
                @Html.DisplayName("Payment ID : ")
            </dt>
            <dd class="infodata">
                @Html.DisplayFor(model => model.Item1.PaymentID)
            </dd>
            <dt style="color:royalblue; font-weight:bold">
                @Html.DisplayName("Shipping ID : ")
            </dt>
            <dd class="infodata">
                @Html.DisplayFor(model => model.Item1.ShippingID)
            </dd>
            <dt style="color:royalblue; font-weight:bold">
                @Html.DisplayName("Shipping Address : ")
            </dt>
            <dd class="infodata">
                @Html.DisplayFor(model => model.Item1.ShippingDetail.Address)
            </dd>


        </dl>
    </div>
</div>

<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading" style="padding:5px 15px">
            <h4>Items</h4>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="">
                    <div class="table-responsive col-md-off ">
                        <table class="table table-hover ">
                            <thead>
                                <tr>
                                    <th class="heading">S.No</th>
                                    <th class="heading">Product Name</th>
                                    <th class="heading">Quantity</th>
                                    <th class="heading">Unit Price</th>
                                    <th class="heading">Total</th>
                                </tr>
                            </thead>

                            <tbody>
                                @{int i = 0;}
                                @foreach (var item in Model.Item2)
                                {
                                    i++;
                                    <tr>
                                        <td class="data">@i.ToString()</td>
                                        <td class="data">@item.Product.Name</td>
                                        <td class="data">@item.Quantity</td>
                                        <td class="data">@item.UnitPrice</td>
                                        <td class="data">@item.TotalAmount</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="bg-primary" style="padding:5px 15px">
                                    <td style="color:white" colspan="5"><h4>Total Detail</h4></td>

                                </tr>
                                <tr>
                                    <th >Total:</th>
                                    <th></th>
                                    <th>@ViewBag.TotalItems</th>
                                    <th></th>
                                    <th>@ViewBag.Amount</th>
                                </tr>
                                <tr>
                                    <th>Discount:</th>
                                    <th colspan="3"></th>
                                    <th>@ViewBag.Discount</th>
                                </tr>
                                <tr class="bg-info">
                                    <th>Payable Amount:</th>
                                    <th colspan="3"></th>
                                    <th>@ViewBag.TAmount</th>
                                </tr>
                            </tfoot>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.ActionLink("Back", "Index", "Order", new { @class = "btn btn-primary" })

